{
  "name": "reactnative-typescript-boilerplate",
  "version": "0.1.0",
  "description": "A boilerplate for TypeScript / ReactNative app",
  "main": "index.js",
  "dependencies": {
    "react": "^15.2.0",
    "react-native": "^0.28.0"
  },
  "devDependencies": {
    "concurrently": "^2.1.0",
    "typescript": "^1.8.10",
    "typings": "^1.3.1"
  },
  "scripts": {
    "android:bundle": "tsc && node node_modules/react-native/local-cli/cli.js bundle --entry-file=src/js/index.android.js --platform=android --assets-dest=android/src/main/res --bundle-output=android/src/main/assets/bundle.js --minify",
    "android:release": "npm run android:bundle && ./gradlew android:aR",
    "dev-server": "concurrently \"node node_modules/react-native/local-cli/cli.js start --projectRoots=src/js,node_modules\" \"tsc --watch\"",
    "postinstall": "typings install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jokester/reactnative-typescript-boilerplate.git"
  },
  "keywords": [
    "react",
    "reacnative",
    "typescript"
  ],
  "author": "Wang Guan <momocraft.com>",
  "license": "CC-BY-SA-4.0",
  "bugs": {
    "url": "https://github.com/jokester/reactnative-typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/jokester/reactnative-typescript-boilerplate#readme"
}
