{
  "name": "reactnative-typescript-boilerplate",
  "version": "0.1.0",
  "description": "A boilerplate for TypeScript / ReactNative app",
  "main": "index.js",
  "dependencies": {
    "react": "^15.4.1",
    "react-native": "^0.39.2",
    "redux": "^3.6.0"
  },
  "devDependencies": {
    "@types/react": "^0.14.55",
    "@types/react-native": "^0.37.1",
    "@types/redux": "^3.6.0",
    "concurrently": "^2.1.0",
    "typescript": "^2.1.4"
  },
  "scripts": {
    "android:bundle": "tsc && node node_modules/react-native/local-cli/cli.js bundle --entry-file=src/js/index.android.js --platform=android --assets-dest=android/src/main/res --bundle-output=android/bundle.js && uglifyjs --screw-ie8 --mangle <android/bundle.js >android/src/main/assets/bundle.js && rm android/bundle.js",
    "android:debug": "rm -f android/src/main/assets/bundle.js && ./gradlew android:assembleDebug",
    "android:release": "npm run android:bundle && ./gradlew android:aR",
    "dev-server": "concurrently \"node node_modules/react-native/local-cli/cli.js start --projectRoots=src/js,node_modules\" \"tsc --watch\"",
    "postinstall": "typings install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jokester/reactnative-typescript-boilerplate.git"
  },
  "keywords": [
    "react",
    "reacnative",
    "typescript"
  ],
  "author": "Wang Guan <momocraft.com>",
  "license": "CC-BY-SA-4.0",
  "bugs": {
    "url": "https://github.com/jokester/reactnative-typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/jokester/reactnative-typescript-boilerplate#readme"
}
